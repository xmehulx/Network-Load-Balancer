#!/bin/bash
	

# Check conditions using if, elif, and else
for i in {1..100}; do
    random_number=$((RANDOM % 7))
    if [ "$random_number" -eq 0 ]; then
        curl 10.0.0.1/bigfile > bigfile.save
    elif [ "$random_number" -le 2 ]; then
        curl 10.0.0.1/medfile > medfile.save
    elif [ "$random_number" -le 4 ]; then
        curl 10.0.0.1/smallfile > smallfile.save
    else
        curl 10.0.0.1/vsmfile > vsmfile.save
    fi
done
