#!/bin/bash

# Check conditions using if, elif, and else
for i in {1..5}; do
    echo -e "\nREQUEST #${i}\n"
    random_number=$((RANDOM % 4))
    if [ "$random_number" -eq 0 ]; then
        curl http://balancer.mn/bigfile > /dev/null
        #curl http://balancer.mn/bigfile -o bigfile.save
    elif [ "$random_number" -eq 1 ]; then
        curl http://balancer.mn/medfile > /dev/null
        #curl http://balancer.mn/medfile -o medfile.save
    elif [ "$random_number" -eq 2 ]; then
        curl http://balancer.mn/smallfile > /dev/null
    else
        curl http://balancer.mn/vsmfile > /dev/null
    fi
done
