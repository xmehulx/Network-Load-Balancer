#!/bin/bash
	

# Check conditions using if, elif, and else
for i in {1..100}; do
    random_number=$((RANDOM % 7))
    if [ "$random_number" -lt 0 ]; then
        curl http://balancer.mn/bigfile -o bigfile.save
    elif [ "$random_number" -lt 0 ]; then
        curl http://balancer.mn/medfile -o medfile.save
    elif [ "$random_number" -lt 0 ]; then
        curl http://balancer.mn/smallfile -o smallfile.save
    else
        curl http://balancer.mn/test.txt -o vsmfile.save
    fi
done
